{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double",
      { "allowTemplateLiterals": true }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-multi-spaces": [
      "error"
    ],
    "key-spacing": [
      "error",
      { "align": "value" }
    ],
    "keyword-spacing": [
      "error"
    ],
    "space-infix-ops": [
      "error"
    ],
    "comma-spacing": [
      "error"
    ],
    "brace-style": [
      "error",
      "1tbs",
      { "allowSingleLine": true }
    ],
    "curly": [
      "error",
      "all"
    ],
    "handle-callback-err": [
      "error"
    ],
    "no-multiple-empty-lines": [
      "error"
    ],
    "block-spacing": [
      "error"
    ],
    "camelcase": [
      "error"
    ],
    "comma-style": [
      "error"
    ],
    "dot-location": [
      "error",
      "property"
    ],
    "eol-last": [
      "error"
    ],
    "func-call-spacing": [
      "error"
    ],
    "new-cap": [
      "error",
      { "properties": false }
    ],
    "new-parens": [
      "error"
    ]
  }
}
